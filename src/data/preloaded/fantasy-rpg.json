    },
    {
      "id": "magicWeapon",
      "name": "Magic Weapon",
      "type": "simple",
      "description": "Combines dice bonus with enchantment and base weapon",
      "resultType": "item",
      "tags": ["equipment", "weapons", "magic"],
      "entries": [
        { "value": "+{{dice:1d3}} {{magicEnchantment}} {{weaponBase}}" }
      ]
    },
    {
      "id": "monsterEncounter",
      "name": "Monster Encounter (d100)",
